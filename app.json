{
  "expo": {
    "name": "Amazon Photo Editor",
    "slug": "amazon-photo-editor",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "amazonphotoeditor",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.amazonphotoeditor.app"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#6200EE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.amazonphotoeditor.app"
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#6200EE",
          "dark": {
            "backgroundColor": "#3700B3"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Amazon Photo Editor to access your camera to capture product photos."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Amazon Photo Editor to save edited photos to your gallery.",
          "savePhotosPermission": "Allow Amazon Photo Editor to save edited photos to your gallery.",
          "isAccessMediaLocationEnabled": false
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
