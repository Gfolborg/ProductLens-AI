{
  "extends": "expo/tsconfig.base.json",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./client/*"],
      "@shared/*": ["./shared/*"]
    },
    "types": ["node"]
  },
  "include": ["client/**/*.ts", "client/**/*.tsx", "server/**/*.ts", "shared/**/*.ts", "shared/**/*.tsx", "*.ts", "*.tsx"],
  "exclude": ["node_modules", "build", "dist", "**/*.test.ts", "ProductLens", "ProductLens AI"],
}
